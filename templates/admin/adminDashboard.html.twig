{% extends 'BaseTemplate.html.twig' %}
{% block head %} {% endblock %}

{% block title %}        
          <h3>Admin Dashboard</h3>        
{% endblock %}

{% block content %}
   
            <div >
                <table>
                    <tr>
                        <td>
                            <h4>Informations du compte</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>Session ID :</td>
                        <td>{{ userSession.id }}</td>
                    </tr>
                    <tr>
                        <td>Pseudo :</td>
                        <td>{{ userSession.username }}</td>

                    </tr>
                    <tr>
                        <td>Adresse email :</td>
                        <td>{{ userSession.email }}</td>
                    </tr>
                    <tr>
                        <td>Date de création du compte : </td>
                        <td>{{ userSession.created_at|date('d/m/Y \\à H:i:s')  }}</td>
                    </tr>
                    <tr>
                        <td>Role : </td>
                        <td>{{ userSession.role }}</td>
                    </tr>
                </table>
            </div>

            <div >
                <div><a  href="index.php?action=adminListUser">Liste des utilisateurs</a></div>
                <div><a  href="index.php?action=adminListPosts">Liste des posts</a></div>
                <div><a  href="index.php?action=adminListAllComment">Liste des commentaires</a></div>
            </div>
       


   

    {% if users is defined %}
        <hr>
        <div class="container">

                {% for user in users %}
                <div >
                    <p>User ID : {{ users.id }}</p>
                </div>
                <div >
                    <p>username : {{ users.username }}</p>
                </div>
                <div >
                    <p>Email : {{ users.email }}</p>
                </div>
                <div >
                    <p>Date d'enregistrement : {{ users.created_at|date('d/m/Y \\à H:i:s')  }}</p>
                </div>
                <div >
                    <p>Role :
                        {% if users.role == "user" %}
                        Administrateur
                        {% elseif users.role == "admin" %}
                        Utilisateur
                        {% endif %}
                    </p>
                </div>
                    <hr>
                {% endfor %}
        </div>
    {% endif %}


    {% if posts is defined %}
        <hr>
        <div class="container">
            {% for post in posts %}
            <div >
                <div ><p>ID Post : {{ post.id }}</p></div>
                <div > <p>Titre: {{ post.title }}</p></div>
            </div>
                <div class="row">
                    <p>Chapo : {{ post.chapo }}</p>
                </div>

            <div class="row">
                <p>{{ post.content }}</p>
            </div>
            <div class="row">
                <div >
                    <p>Date de création: {{ post.frenchCreationDate|date('d/m/Y \\à H:i:s') }}</p>
                </div>
                <div >
                    {% if post.frenchUpdatedDate != null %}
                    <div >
                        <p>Dernière modification le : {{ post.frenchUpdatedDate|date('d/m/Y \\à H:i:s') }}</p>
                    </div>
                    {% endif %}
                </div>
                <div >
                    <p>Crée par : {{ post.username }}</p>
                </div>
            </div>


            {% if post.published == '0' %}
                <a  href="index.php?action=publishPost&idPost={{ post.id }}">Approuver</a>
            {% endif %}
                <a  href="index.php?action=editPost&idPost={{ post.id  }}">Editer</a>
                <a  href="index.php?action=deletePost&idPost={{ post.id  }}">Supprimer</a>
            <hr>
            {% endfor %}

        </div>
    {% endif %}

    {% if comments is defined %}
        <hr>
        <div class="container">
            {% for comment in comments %}
                <div >
                    <p>ID : {{ comment.id }}</p>
                </div>
                <div >
                    <p>Commentaire : {{ comment.content }}</p>
                </div>
                <div >
                    <p>Ecrit par : {{ comment.username }} le {{ comment.frenchCreationDate|date('d/m/Y \\à H:i:s')  }}</p>
                </div>
                <div >
                    <p>Post : {{ comment.post_id }}</p>
                </div>

                <div >
                {% if comment.published == '1' %}
                    <p>Commentaire validé</p>
                {% elseif comment.published == '0' %}
                    <p>Commentaire en attente de validation</p>
                    <a href="index.php?action=publishComment&idComment={{ comment.id }}">Approuver</a>
                {% endif %}
                <a  href="index.php?action=deleteComment&idComment={{ comment.id}}">Supprimer</a>
                </div>

                <hr>
            {% endfor %}
            {% if comments is empty %}
                <div> 
                    <p>Il n'y a aucun commentaires</p>
                </div>
            {% endif %}
        </div>
    {% endif %}

{% endblock %}