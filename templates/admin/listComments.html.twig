 {% extends 'BaseTemplate.html.twig' %}
{% block head %}{% endblock %}
{% block title %}
                   <h3>Liste des commentaires</h3>   
{% endblock %}

{% block content %}
 {% if comments is defined %}
        
        <div class="container">
           
        <h3 >Liste des commentaires</h3> 
        <hr>{% for comment in comments %}
                <div >
                    <p>ID : {{ comment.id }}</p>
                </div>
                <div >
                    <p>Commentaire : {{ comment.content }}</p>
                </div>
                <div >
                    <p>Ecrit par : {{ comment.username }} le {{ comment.frenchCreationDate|e }}</p>
                </div>
                <div >
                    <p>Post : {{ comment.post_id }}</p>
                </div>

                <div >
                {% if comment.published == '1' %}
                    <p>Commentaire valid√©</p>
                {% elseif comment.published == '0' %}
                    <p>Commentaire en attente de validation</p>
                    <a href="index.php?action=publishComment&id_comment={{ comment.id }}">Approuver</a>
                {% endif %}
                <a  href="index.php?action=deleteComment&id_comment={{ comment.id}}">Supprimer</a>
                </div>

                <hr>
            {% endfor %}
            {% if comments is empty %}
                <div> 
                    <p>Il n'y a aucun commentaires</p>
                </div>
            {% endif %}
        </div>
    {% endif %}
    {% endblock %}