{% extends 'BaseTemplate.html.twig' %}
{% block title %}
    <div class="row">
        <div class="col text-center">
            <h3>Création d'un post</h3>
        </div>
    </div>
{% endblock %}

{% block content %}

    <div class="container">
        <form action="index.php?action=createPost" method="post">

            <div class="form-group">
                <label for="title">Titre</label>
                <input type="text" class="form-control"  id="title" name="title">
            </div>

            <div class="form-group">
                <label for="chapo">Extrait</label>
                <input type="text" class="form-control" id="chapo" name="chapo">
            </div>

            <div class="form-group form-check">
                <label for="content">Contenu</label>
                <textarea type="text" class="form-control" cols="30" rows="10" id="content" name="content"></textarea>
            </div>
            <label style="float: left; margin: 5px auto 5px;">Image</label>
				<input type="file" name="featured_image">
                {% if userSession.role == 'Admin' %}
						<label for="publish">
							Publier
							<input type="checkbox" value="0" name="publish" checked="checked">
						</label>
                {% endif %}        
            <button type="submit" class="btn btn-primary">Créer</button>
        </form>

    </div>
{% endblock %}