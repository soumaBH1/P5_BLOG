{% extends 'BaseTemplate.html.twig' %}
{% block head %}{% endblock %}
{% block title %}
   
          <h3>Liste des blogs</h3>
       
{% endblock %}

{% block content %}
 <div class="container">
   
        {% for post in posts %}
           {# dump(post.getFrenchCreationDate())#}
            <!-- affichage de l'enveloppe de posts -->
          <div class="post-wrapper-singleP">
                <!-- affichage du post  -->
                <div class="full-post-div">
                        <h2 class="post-title">{{ post.title }}</h4>
                       <div > {{ post.chapo }} </div>
                   
                            <a class="card-link" href='index.php?action=post&id={{ post.id }}'>Lire la suite</a>
                       
                        <div class="row">
                           <div class="post-body-div-details">
                               
                                    <p>A été créé le {{ post.frenchCreationDate}}</p>
                                {% if post.frenchCreationDate <= post.frenchUpdatedDate  %} 
                                <p>A été modifié le {{ post.frenchUpdatedDate }}</p>
                                     
                                {% endif %}
                            </div>
                            <div class="content post post_image" alt="">
                                <img src= {{ 'static/images/'~ post.image }} alt="" width="500">
                            
                            </div>
                            <div class="col-6">
                                <p>Crée par {{ post.username}}</p>
                            </div>
                        </div>

                  </div>
                 
                </div>

        {% endfor %}

{% endblock %}